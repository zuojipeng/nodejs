<% include ./header %>

	<ol class="breadcrumb">
	  <li><a href="#">友情链接列表</a></li>
	  <li class="active">列表内容</li>
	</ol>

	<table class="table table-hover">
		<tr>
		    <td>排序</td>
			<td>链接名称</td>
			<td>链接地址</td>
			<td>操作</td>
		</tr>	
		<% lianjiedata.forEach(function(val){ %>
			<tr>
			    <td><%= val.order %></td>
				<td><%= val.name %></td>
				<td><%= val.info %></td>
				<td>
					<a href="/admin/lianjieEdit/<%= val._id %>"> 编辑</a>
					|
					<a href="/admin/lianjieDel/<%= val._id %>" onclick="return confirm('您确定要删除吗?')"> 删除</a>
				</td>
			</tr>
		<% }) %>
	</table>

<% include ./footer %>