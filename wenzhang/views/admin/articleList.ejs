<% include ./header %>

	<ol class="breadcrumb">
	  <li><a href="#">文章列表</a></li>
	  <li class="active">文章信息</li>
	</ol>

	<table class="table table-hover articlelist">
		<tr>
			<td>封面</td>
			<td>文章标题</td>
			<td>栏目</td>
			<td>作者</td>
			<td>创建时间</td>
			<td>操作</td>
		</tr>	
		<% articles.forEach(function(val){ %>
			<tr>
				<td>
					<img src="/<%= val.imgurl%>" alt="">
				</td>
				<td><%= val.title %></td>
				<td><%= val.itemId.name %></td>
				<td><%= val.author %></td>
				<td><%= val.ctime.toLocaleString() %></td>
				<td>
					<a href="/admin/articleEdit/<%= val._id %>"> 编辑</a>
					|
					<a href="/admin/articleRemove/<%= val._id %>" onclick="return confirm('您确定要删除吗?')"> 删除</a>
				</td>
			</tr>
		<% }) %>
	</table>
	<!-- 分页 -->
	<nav aria-label="Page navigation">
	  <ul class="pagination">
		<li> <a href="/admin/articlelist">首页</a></li>
		<li> <a href="/admin/articlelist?page=<%= page-1%>">上一页</a></li>
		<% for(var i=1; i<=maxPageNumber;i++){ %>
		    <li><a href="/admin/articleList?page=<%= i %>"><%=i%></a></li>
		<% } %>
		<li> <a href="/admin/articlelist?page=<%= -(-page-1)%>">下一页</a></li>
		<li> <a href="/admin/articlelist?page=<%= maxPageNumber %>">尾页</a></li>
	    </li>
	  </ul>
	</nav>
	<!-- 分页 end -->
<% include ./footer %>