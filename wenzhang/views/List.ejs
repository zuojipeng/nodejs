<% include ./header %>

<!-- 列表-->
<div class="container listwz">
	<div class="row">
	    <div class="col-md-12"> 
	       <ol class="breadcrumb">
				<li><a href="#">好看的文章列表</a></li>
			</ol>
		</div>
	     <% lists.forEach(function(val){ %>
          <div class="col-md-12">      	
				<div class="col-md-1"></div>
				<div class="col-md-7">

			        	<h3> <a href="/Edit/<%= val._id %>"><%= val.title %></a></h3>
			        	<p> <a href="">作者：<%= val.author %></a></p>
			        	<p>关键字：<%= val.keywords %></p>
			        	<p>发布时间：<%= val.ctime.toLocaleString() %></p>
				</div>
				<div class="col-md-4 listpic">
					<img src="/<%= val.imgurl%>">
				</div>
          </div>
          <% }) %>
	</div>
</div>
<!-- 列表 end -->
<!-- 分页 -->

<div class="container">
    <nav aria-label="Page navigation">
	  <ul class="pagination">
		<li> <a href="/List/<%= lists[0].itemId %>?page=1" aria-label="Previous">首页</a></li>

		<li> <a href="/List/<%= lists[0].itemId %>?page=<%= page-1%>" aria-label="Previous">上一页</a></li>
		
		<% for(var i=1; i<=maxPageNumber;i++){ %>
		   <li><a href="/List/<%= lists[0].itemId %>?page=<%= i %>"><%= i %></a></li>
		<% } %>
		
		<li> <a href="/List/<%= lists[0].itemId %>?page=<%= -(-page-1)%>" aria-label="Next">下一页</a></li>
		
		<li> <a href="/List/<%= lists[0].itemId %>?page=<%= maxPageNumber%>" aria-label="Previous">尾页</a></li>
	    </li>
	  </ul>
	</nav>
</div>
<!-- 分页 end -->

<% include ./footer %>
